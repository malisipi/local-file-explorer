{
	"name": "Local File Explorer",
	"description": "Local File Explorer",
	"version": "2.0.0",
	"manifest_version": 2,
	"icons": {
		"16": "/assets/app/16.png",
		"32": "/assets/app/32.png",
		"48": "/assets/app/48.png",
		"128": "/assets/app/128.png",
		"144": "/assets/app/144.png",
		"192": "/assets/app/192.png",
		"512": "/assets/app/512.png"
	},
	"author": "malisipi",
	"permissions": [
		"storage"
	],
	"content_scripts": [
		{
			"matches": [
				"file://*/*"
			],
			"js": [ "js/lfe.js" ],
			"css": [ "css/preload.css" ]
		}
	],
	"web_accessible_resources": [
		"assets/mimetypes/*", "assets/icons/*", "LICENSE*"
	],
	"browser_specific_settings": {
		"gecko": {
			"id": "local-file-explorer@malisipi.github.io",
			"strict_min_version": "121.0",
			"strict_max_version": "*"
		}
	}
}
